{
    "name": "codequest/platform",
    "description": "CodeQuest - Learn. Play. Conquer the Web.",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "vlucas/phpdotenv": "^5.5",
        "appwrite/appwrite": "^13.0",
        "monolog/monolog": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "CodeQuest\\": "api/src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('.env.sample', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
